<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackLayoutExercise.MainPage">

    <StackLayout>
        <Label HorizontalOptions="Start" Text="Bill"/>
        <Entry x:Name="input" HorizontalOptions="Start" BackgroundColor="AliceBlue" />
        <Label x:Name="Tip" Text="Tip $0.00" />
        <Label x:Name="Total" Text="Total $0.00"/>
        <Label Text="Tip Percentage" />
        <Label x:Name="percent" Text="$0.00"/>
        <Slider Value="15" MaximumTrackColor="Red" MinimumTrackColor="Green"/>
        <Button Text="15%" TextColor="Cyan"/>
        <Button Text="20%" TextColor="Cyan"/>
        <RadioButton x:Name="down" />
        <RadioButton x:Name="up" />
    </StackLayout>

</ContentPage>
